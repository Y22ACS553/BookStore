@page "{id:int}"
@model BookStore.Pages.Books.EditModel
@{
    ViewData["Title"] = "Edit Book";
}

<h2>Edit Book</h2>

<form method="post">
    <div>
        <label>Title</label>
        <input asp-for="Book.Title" />
    </div>
    <div>
        <label>Author</label>
        <input asp-for="Book.Author" />
    </div>
    <div>
        <label>Price</label>
        <input asp-for="Book.Price" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>